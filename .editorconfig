; What is EditorConfig? http://editorconfig.org/

root = true

; use tabs identation for all files
[*]
charset = utf-8
indent_style = tab
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json}]
indent_style = space
indent_size = 2

[*.{ts,js,html,htm,css,scss}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
